{
  "$schema": "https://modelcontextprotocol.io/schemas/mcp.json",
  "name": "Expanso Pipeline Examples",
  "description": "Production-ready pipeline configurations for Expanso Edge with downloadable YAML files",
  "homepage": "https://examples.expanso.io",
  "servers": [
    {
      "name": "expanso-examples",
      "url": "https://mcp.expanso.io",
      "description": "Semantic search and retrieval over Expanso pipeline examples",
      "capabilities": {
        "tools": true,
        "resources": true
      }
    }
  ],
  "resources": [
    {
      "uri": "https://examples.expanso.io/llms.txt",
      "name": "Examples Index",
      "description": "Master index for LLM consumption",
      "mimeType": "text/plain"
    },
    {
      "uri": "https://examples.expanso.io/llms/data-routing.txt",
      "name": "Data Routing Patterns",
      "description": "Circuit breakers, fan-out, priority queues, content routing",
      "mimeType": "text/plain"
    },
    {
      "uri": "https://examples.expanso.io/llms/data-security.txt",
      "name": "Data Security Patterns",
      "description": "PII removal, encryption, schema validation",
      "mimeType": "text/plain"
    },
    {
      "uri": "https://examples.expanso.io/llms/data-transformation.txt",
      "name": "Data Transformation Patterns",
      "description": "Time windows, deduplication, format conversion",
      "mimeType": "text/plain"
    },
    {
      "uri": "https://examples.expanso.io/llms/log-processing.txt",
      "name": "Log Processing Patterns",
      "description": "Filtering, enrichment, production pipelines",
      "mimeType": "text/plain"
    }
  ]
}
